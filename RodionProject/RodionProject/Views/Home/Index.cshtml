@model List<RodionProject.Models.Promo>

@{
    ViewData["Title"] = "Главная";
}

<!-- ========================================= -->
<!-- HERO-блок (верхняя заставка)              -->
<!-- ========================================= -->
<header class="hero-section">
    <div class="container py-5 d-flex flex-column flex-md-row align-items-center justify-content-center gap-4">

        <!-- ЛОГО СЛЕВА -->
        <img src="~/images/logo.png" class="hero-logo" alt="Логотип">

        <!-- ТЕКСТ (как был) -->
        <div class="text-center">
            <h1 class="display-3">Всё везём</h1>
            <p class="lead">
                Надёжные перевозки с 2020 года.<br />
                Ваш груз — наша забота.
            </p>
        </div>

    </div>
</header>


<!-- ========================================= -->
<!-- Секция с акциями                          -->
<!-- ========================================= -->
<section class="promo-section py-5">
    <div class="container">
        <h2 class="text-center mb-4">Наши постоянно действующие предложения</h2>

        <div class="row justify-content-center">

            @foreach (var promo in Model)
            {
                <!-- col-md-6 = две карточки в ряд на больших экранах -->
                <div class="col-12 col-sm-6 col-md-6 mb-4 d-flex justify-content-center">
                    <div class="promo-card">
                        <img src="@promo.ImageUrl" class="promo-img mb-3" />
                        <p class="promo-item font-weight-bold">@promo.Text</p>
                    </div>
                </div>
            }

        </div>
    </div>
</section>


<!-- ========================================= -->
<!-- Калькулятор стоимости                     -->
<!-- ========================================= -->
<section class="calculator-section py-5">
    <div class="container d-flex justify-content-end">

        <div class="calculator-box">

            <h3 class="text-center mb-3">Калькулятор стоимости</h3>

            <form id="calculatorForm">

                <!-- Место назначения -->
                <div class="mb-3">
                    <label class="form-label">Место назначения</label>
                    <input type="text" class="form-control" id="placeTo" placeholder="Куда едем?" required>
                </div>

                <!-- Количество грузчиков -->
                <div class="mb-3">
                    <label class="form-label">Кол-во грузчиков</label>
                    <input type="number" class="form-control" id="loaders" placeholder="Например: 2">
                </div>

                <!-- Время работы грузчиков -->
                <div class="mb-3">
                    <label class="form-label">Время работы (часы)</label>
                    <input type="number" class="form-control" id="hours" value="1" min="1">
                </div>

                <!-- Тип машины -->
                <div class="mb-3">
                    <label class="form-label">Тип машины</label>
                    <select class="form-select" id="carType">
                        <option value="gazel">Газель 1.5 т</option>
                        <option value="fura">Фура</option>
                        <option value="buk">Бычок 3.5 т</option>
                    </select>
                </div>

                <button type="button" class="btn btn-primary w-100" onclick="calculateCost()">
                    Рассчитать
                </button>

            </form>

            <div class="mt-3 text-center">
                <h4>Стоимость: <span id="result">0</span> ₽</h4>
            </div>

        </div>

    </div>
</section>


<!-- ========================================= -->
<!-- JavaScript для калькулятора               -->
<!-- ========================================= -->
<script>
    function calculateCost() {

        // Берем поля
        const carType = document.getElementById('carType');
        const placeTo = document.getElementById('placeTo');

        const loaders = document.getElementById('loaders');
        const hours = document.getElementById('hours');
        
        //Валидация

        let hasError = false;

        if (placeTo.value.trim() === "") {
            alert("Пожалуйста, введите место назначения.");
            placeTo.focus()
            hasError = true;
        }
        else if (carType.value.trim() === "") {
            alert("Пожалуйста, выберете машину нужного формата.");
            carType.focus();
            hasError = true;
        }
        // Проверка: Грузчики - валидное число > 0
        else if (isNaN(parseInt(loaders.value)) || parseInt(loaders.value) <= 0) {
            alert("Пожалуйста, введите корректное количество грузчиков.");
            loaders.focus();
            hasError = true;
        }
        // Проверка: Часы - валидное число > 0
        else if (isNaN(parseInt(hours.value)) || parseInt(hours.value) <= 0) {
            alert("Пожалуйста, введите корректное время работы (часы).");
            hours.focus();
            hasError = true;
        }

        // Если была обнаружена хоть одна ошибка, останавливаем выполнение
        if (hasError) {
            return;
        }

        // Формула

        // 2) работа машины
        const carCost = parseInt(loaders.value) + parseInt(hours.value)

        const info = placeTo.value + carType.value


        const total = carCost.toFixed(0).toString() + info;

        document.getElementById('result').innerText = total;
    }
</script>